{
  "manifest_version": 3,
  "name": "Chat Completion Notifier",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chat.deepseek.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["notification.mp3", "icon.png"],
      "matches": ["https://chat.deepseek.com/*", "https://chatgpt.com/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}